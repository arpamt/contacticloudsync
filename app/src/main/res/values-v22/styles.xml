<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <item name="android:colorPrimary">#EEEEEE</item>
        <item name="android:colorPrimaryDark">#555555</item>
        <item name="android:colorAccent">#2e66bd</item>
        <item name="android:textColorPrimary">#555555</item>
        <item name="android:actionBarStyle">@style/action_bar_theme</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextView.Heading" parent="AppTheme">
        <item name="android:padding">5dp</item>
        <item name="android:background">#eaeaea</item>
        <item name="android:textColor">#333333</item>

    </style>

    <style name="action_bar_theme" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">#f7f7f7</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>